<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/padding_super_tiny"
    android:paddingEnd="@dimen/padding_super_tiny">
    <View
        android:id="@+id/time_tick"
        android:layout_width="@dimen/border_1"
        android:layout_height="@dimen/height_20"
        android:layout_alignParentBottom="true"
        android:background="@color/colorTickBackground"
        android:visibility="invisible"
        />
    <View
        android:id="@+id/time_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_medium"
        android:background="@drawable/alert_background"
        android:visibility="gone"
        />
</RelativeLayout>