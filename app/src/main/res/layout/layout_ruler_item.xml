<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ruler_layout"
    android:layout_width="@dimen/height_80"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/rule_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/ruler_scale_background"
            />
        <LinearLayout
            android:id="@+id/ruler_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/margin_medium">
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/ruler_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorRulerText"
        android:textSize="@dimen/text_size_14"
        />
</RelativeLayout>